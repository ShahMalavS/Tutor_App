<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PopupAnimation" parent="Widget.AppCompat.PopupWindow">
        <item name="android:windowEnterAnimation">@anim/bottom_up</item>
        <item name="android:windowExitAnimation">@anim/bottom_down</item>
    </style>

    <style name="RobotoCalendarMonthText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#695939</item>
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="RobotoCalendarMonthArrow">
        <item name="android:tint">#FACBFD</item>
    </style>

    <style name="RobotoCalendarDayOfTheWeekText">
        <item name="android:textSize">@dimen/roboto_calendar_day_of_week_font</item>
        <item name="android:textColor">#1230FF</item>
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
    </style>

    <style name="RobotoCalendarDayOfTheMonthText">
        <item name="android:textSize">@dimen/roboto_calendar_day_of_the_month_font</item>
        <item name="android:textColor">@color/roboto_calendar_day_of_the_month_font</item>
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WizardFormLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

</resources>
