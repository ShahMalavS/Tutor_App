<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/layout_toolbar" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/calendar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/schedule"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_shadow"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="100">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="19.5"
                            android:text="Total Days"
                            android:textAlignment="center"
                            android:padding="1dp"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/caldroid_lighter_gray"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="19.5"
                            android:text="Present"
                            android:textAlignment="center"
                            android:padding="5dp"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/caldroid_lighter_gray"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="19.5"
                            android:text="Absent"
                            android:textAlignment="center"
                            android:padding="5dp"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/caldroid_lighter_gray"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="19.5"
                            android:text="Leaves"
                            android:textAlignment="center"
                            android:padding="5dp"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/caldroid_lighter_gray"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="19.5"
                            android:text="Holidays"
                            android:textAlignment="center"
                            android:padding="5dp"/>

                    </LinearLayout>
                    
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/caldroid_lighter_gray"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="100">

                        <TextView
                            android:id="@+id/total"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="19.5"
                            android:text="28"
                            android:textAlignment="center"
                            android:padding="5dp"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/caldroid_lighter_gray"/>

                        <TextView
                            android:id="@+id/present"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="19.5"
                            android:text="26"
                            android:textAlignment="center"
                            android:padding="5dp"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/caldroid_lighter_gray"/>

                        <TextView
                            android:id="@+id/absent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="19.5"
                            android:text="1"
                            android:textAlignment="center"
                            android:padding="5dp"
                            android:textColor="@color/roboto_calendar_circle_1"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/caldroid_lighter_gray"/>

                        <TextView
                            android:id="@+id/leaves"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="19.5"
                            android:text="1"
                            android:textAlignment="center"
                            android:padding="5dp"
                            android:textColor="@color/roboto_calendar_circle_2"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/caldroid_lighter_gray"/>

                        <TextView
                            android:id="@+id/holidays"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="19.5"
                            android:text="0"
                            android:textAlignment="center"
                            android:padding="5dp"
                            android:textColor="@color/blue"/>

                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/apply_leaves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:padding="10dp"
                    android:text="Apply Leaves"
                    android:textAlignment="center" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</ScrollView>
